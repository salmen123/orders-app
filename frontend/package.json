{
  "name": "frontend",
  "version": "0.1.0",
  "description": "orders application",
  "author": "Salmen Saadi",
  "repository": {
    "type": "git",
    "url": "https://github.com/salmen123/orders-app.git"
  },
  "private": true,
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "webpack-dev-server --config webpack.config.dev.js --port 3000"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "firebase": "^8.1.1",
    "node-sass": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.0",
    "react-toastify": "^6.1.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "babel-preset-react-app": "^10.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.14.0",
    "eslint-loader": "^4.0.2",
    "html-webpack-plugin": "^4.5.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=8"
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn",
      "no-mixed-spaces-and-tabs": [
        2,
        "smart-tabs"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
